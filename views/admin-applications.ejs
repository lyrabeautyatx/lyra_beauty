<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Partner Applications - Admin - Lyra Beauty</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body class="gold-bg">
  <div class="container mt-4">
    <div class="row">
      <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2>Partner Applications Management</h2>
          <div>
            <span class="badge bg-warning me-2">
              <%= pendingCount %> Pending
            </span>
            <a href="/admin" class="btn btn-outline-primary">Back to Admin</a>
          </div>
        </div>

        <!-- Filter tabs -->
        <ul class="nav nav-tabs mb-4">
          <li class="nav-item">
            <a class="nav-link <%= !currentStatus ? 'active' : '' %>" href="/admin/applications">
              All Applications
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= currentStatus === 'pending' ? 'active' : '' %>" href="/admin/applications?status=pending">
              Pending (<%= pendingCount %>)
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= currentStatus === 'approved' ? 'active' : '' %>" href="/admin/applications?status=approved">
              Approved
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= currentStatus === 'rejected' ? 'active' : '' %>" href="/admin/applications?status=rejected">
              Rejected
            </a>
          </li>
        </ul>

        <% if (applications.length === 0) { %>
          <div class="card">
            <div class="card-body text-center py-5">
              <h5>No Applications Found</h5>
              <p class="text-muted">
                <% if (currentStatus) { %>
                  No <%= currentStatus %> applications at this time.
                <% } else { %>
                  No partner applications have been submitted yet.
                <% } %>
              </p>
            </div>
          </div>
        <% } else { %>
          <% applications.forEach(application => { %>
            <div class="card mb-3">
              <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                  <h5 class="mb-0">
                    <%= application.first_name %> <%= application.last_name %>
                    <small class="text-muted">(ID: <%= application.id %>)</small>
                  </h5>
                  <small class="text-muted"><%= application.email %></small>
                </div>
                <span class="badge <%= application.status === 'approved' ? 'bg-success' : 
                                       application.status === 'rejected' ? 'bg-danger' : 'bg-warning' %>">
                  <%= application.status.toUpperCase() %>
                </span>
              </div>
              <div class="card-body">
                <div class="row mb-3">
                  <div class="col-md-4">
                    <strong>Business Name:</strong><br>
                    <%= application.business_name %>
                  </div>
                  <div class="col-md-4">
                    <strong>Applied:</strong><br>
                    <%= new Date(application.created_at).toLocaleDateString() %>
                  </div>
                  <div class="col-md-4">
                    <strong>User ID:</strong><br>
                    <%= application.user_id %>
                  </div>
                </div>

                <% if (application.business_description) { %>
                  <div class="mb-3">
                    <strong>Business Description:</strong><br>
                    <div class="text-muted"><%= application.business_description %></div>
                  </div>
                <% } %>

                <% if (application.referral_experience) { %>
                  <div class="mb-3">
                    <strong>Referral Experience:</strong><br>
                    <div class="text-muted"><%= application.referral_experience %></div>
                  </div>
                <% } %>

                <div class="mb-3">
                  <strong>Why Partner:</strong><br>
                  <div class="text-muted"><%= application.why_partner %></div>
                </div>

                <% if (application.status === 'pending') { %>
                  <hr>
                  <div class="row">
                    <div class="col-md-8">
                      <div class="mb-3">
                        <label for="adminNotes<%= application.id %>" class="form-label">Admin Notes (Optional)</label>
                        <textarea class="form-control" id="adminNotes<%= application.id %>" rows="2"
                                  placeholder="Add notes about your decision..."></textarea>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="d-grid gap-2">
                        <button type="button" class="btn btn-success" 
                                onclick="reviewApplication(<%= application.id %>, 'approved')">
                          ✓ Approve
                        </button>
                        <button type="button" class="btn btn-danger" 
                                onclick="reviewApplication(<%= application.id %>, 'rejected')">
                          ✗ Reject
                        </button>
                      </div>
                    </div>
                  </div>
                <% } else { %>
                  <hr>
                  <div class="row">
                    <div class="col-md-6">
                      <strong>Reviewed By:</strong><br>
                      <%= application.admin_first_name %> <%= application.admin_last_name %>
                    </div>
                    <div class="col-md-6">
                      <strong>Reviewed On:</strong><br>
                      <%= application.reviewed_at ? new Date(application.reviewed_at).toLocaleDateString() : 'N/A' %>
                    </div>
                  </div>
                  <% if (application.admin_notes) { %>
                    <div class="mt-3">
                      <strong>Admin Notes:</strong><br>
                      <div class="alert alert-secondary">
                        <%= application.admin_notes %>
                      </div>
                    </div>
                  <% } %>
                <% } %>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Loading Modal -->
  <div class="modal fade" id="loadingModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-body text-center">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
          <p class="mt-2 mb-0">Processing...</p>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function reviewApplication(applicationId, status) {
      const adminNotes = document.getElementById(`adminNotes${applicationId}`).value;
      const loadingModal = new bootstrap.Modal(document.getElementById('loadingModal'));
      
      // Show loading modal
      loadingModal.show();

      fetch(`/admin/applications/${applicationId}/review`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          status: status,
          adminNotes: adminNotes
        })
      })
      .then(response => response.json())
      .then(data => {
        loadingModal.hide();
        if (data.success) {
          // Reload page to show updated status
          window.location.reload();
        } else {
          alert('Error: ' + (data.error || 'Failed to review application'));
        }
      })
      .catch(error => {
        loadingModal.hide();
        console.error('Error:', error);
        alert('Network error. Please try again.');
      });
    }
  </script>
</body>
</html>