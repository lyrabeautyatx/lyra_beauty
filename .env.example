# Square API Configuration
# For testing, use Sandbox credentials from your Square Developer Dashboard
# https://developer.squareup.com/apps

# Sandbox Credentials (for testing)
SQUARE_ACCESS_TOKEN=YOUR_SANDBOX_ACCESS_TOKEN_HERE
SQUARE_APPLICATION_ID=YOUR_SANDBOX_APPLICATION_ID_HERE
SQUARE_LOCATION_ID=YOUR_SANDBOX_LOCATION_ID_HERE

# Production Credentials (uncomment and use for live payments)
# SQUARE_ACCESS_TOKEN=YOUR_PRODUCTION_ACCESS_TOKEN_HERE
# SQUARE_APPLICATION_ID=YOUR_PRODUCTION_APPLICATION_ID_HERE
# SQUARE_LOCATION_ID=YOUR_PRODUCTION_LOCATION_ID_HERE

# App Configuration
PORT=3000

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# JWT and Session Secrets
JWT_SECRET=your_jwt_secret_change_me_in_production
SESSION_SECRET=your_session_secret_change_me_in_production

# Database Configuration
DATABASE_PATH=./database/lyra_beauty.db

# AWS S3 Backup Configuration
AWS_S3_BACKUP_BUCKET=lyra-beauty-backups